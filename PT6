//1 dala
#include <stdio.h>
void skaitlu_paarbaude();

int main()
{
skaitlu_paarbaude();
return 0;
}
void skaitlu_paarbaude()
{
int n, i, flag=0;
printf(" pozitivu veselu skaitli: ");
scanf("%d",&n);
for(i=2; i<=n/2; i++)
{
if(n%i==0)
{
flag=1;
}
}
if (flag==1)
printf(" %d nav pamata skaitlis.", n);
else
printf(" %d ir pamata skaitlisr.", n);
}


//2 dala
#include <stdio.h>
void priekshskatiijuma_un_displeja_paarbaude(int n);

int main()
{
int n;
printf(" pozitÄ«vu veselu skaitli: ");
scanf("%d",&n);
priekshskatiijuma_un_displeja_paarbaude(n);
return 0;
}
void priekshskatiijuma_un_displeja_paarbaude(int n)
{
int i, flag = 0;
for(i=2; i<=n/2; ++i)
{
if(n%i==0)
{
flag=1;
break;
}
}
if(flag == 1)
printf(" %d nav pamata 
skaitlis.",n);
else
printf(" %d ir pamata skaitlis.", n);
}

