#include <stdio.h>

int main()
{
long int a,c,b,ll,n;
printf("dec: ");
scanf("%ld",&n);
printf("datu tipu(char-c; int-b; long long-ll)\n: ");
scanf("%ld",&a);

int i,factorial;
factorial=1;
if(a=c, n>=1, n<=12)
{
printf("Ar 'char' faktorialu nav iespejams\n");
}
if(a=ll, n>=1, n<=12)
{
printf("Ar 'long long' faktorialu nav iespejams\n");
}
if(a=b, n>=1, n<=12)
{
for(i=1; i<=n; i++)
{
factorial = factorial * i;
}
printf("Faktorials no ievadita skaitļa (%ld) ir : %d",n,factorial);
}

if(a=c, n>=13)
{
printf("Ar 'char' faktorialu nav iespejams\n");
}
if(a=ll, n>=13)
{
printf("Ar 'long long' faktorialu nav iespejams\n");
}
if(a=b, n>=13)
{
for(i=1; n>=13; i++)
{
printf("Faktorials no ievadita skaitļa: Faktorialam nav vertibas\n");
break;
}
}
return 0;
}
