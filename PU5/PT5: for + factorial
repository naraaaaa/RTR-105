#include <stdio.h>

int main()
{
long int a,c,b,ll,n;
printf(" dec skaitļa: ");
scanf("%ld",&n);
printf(" datu varianti(char-c; int-b; long long-ll)\n: ");
scanf("%ld",&a);

int i,f;
f=i=1;
if(a=c, n>=1, n<=12)
{
printf("ar 'char' apreķinat faktorialu nav iespejams\n");
}
if(a=ll, n>=1, n<=12)
{
printf("ar 'long long' apreķinat faktorialu nav iespejams\n");
}
if(a=b, n>=1, n<=12)
{
while(i<=n)
{
f*=i;
i++;
}
printf("Faktorials no skaitļa (%ld) ir : %d",n,f);
}

if(a=c, n>=13)
{
printf("ar 'char' apreķinat faktorialu nav iespejams\n");
}
if(a=ll, n>=13)
{
printf("ar 'long long' apreķinat faktorialu nav iespejams\n");
}
if(a=b, n>=13)
{
while(n>=13)
{
printf("Faktorials no ievadita skaitļa: Faktorialam nav vertibas\n");
break;
}
}
return 0;
}
